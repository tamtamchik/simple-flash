{
  "name": "tamtamchik/simple-flash",
  "type": "library",
  "description": "Easy, framework agnostic flash notifications for PHP.",
  "keywords": [
    "flash",
    "notifications",
    "messages",
    "agnostic"
  ],
  "homepage": "https://github.com/tamtamchik/simple-flash",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Yuri Tkachenko",
      "email": "yuri.tam.tkachenko@gmail.com",
      "homepage": "https://tamtamchika.net"
    }
  ],
  "require": {
    "php": ">=7.3"
  },
  "require-dev": {
    "scrutinizer/ocular": "^1",
    "phpunit/phpunit": "^9"
  },
  "autoload": {
    "psr-4": {
      "Tamtamchik\\SimpleFlash\\": "src"
    },
    "files": [
      "src/function.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tamtamchik\\SimpleFlash\\Test\\": "tests"
    },
    "files": [
      "src/function.php"
    ]
  },
  "scripts": {
    "tests": "vendor/bin/phpunit",
    "examples": "php -S localhost:8000 -t examples/"
  },
  "config": {
    "process-timeout": 0
  },
  "extra": {
    "branch-alias": {
      "dev-master": "3.0.x-dev",
      "2.0.x": "2.0.x-dev",
      "1.2.x": "1.2.x-dev",
      "1.1.x": "1.1.x-dev",
      "1.0.x": "1.0.x-dev"
    }
  },
  "archive": {
    "exclude": [
      "/examples",
      "/issues",
      "/tests"
    ]
  }
}
